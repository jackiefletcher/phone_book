<h2><%= @contact.name() %></h2>
<h3>Current numbers:</h3>

<ul><% @contact.numbers().each() do |number| %>
  <li>Mobile: <%= number.mobile_number() %></li>
  <li>Work: <%= number.work_number() %></li>
  <li>Home: <%= number.home_number() %></li>
  <% end %>
</ul>

<h3>Add phone numbers to your contact here:</h3>

<form action="/phone_numbers" method="post">
  <input id='contact_id' name='contact_id' type='hidden' value='<%= @contact.id() %>'>

  <div class="form-group">
    <label for="mobile_number">Mobile Number:</label>
    <input type="text" name="mobile_number" id="mobile_number" class="form-control">
  </div>
  <div class="form-group">
    <label for="work_number">Work Number:</label>
    <input type="text" name="work_number" id="work_number" class="form-control">
  </div>
  <div class="form-group">
    <label for="home_number">Home Number:</label>
    <input type="text" name="home_number" id="home_number" class="form-control">
  </div>
  <button type="submit" class="btn">Add numbers</button>
</form>

<p>
<a href="/">Return to Main Page</a>
</p>
